<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0-windows10.0.18362;net6.0-windows10.0.18362</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <Version>2021.12.4.2</Version>
    <Authors>Blake Pell</Authors>
    <Company>Blake Pell</Company>
    <Description>SQLite Query Control and Extensions for WPF (.NET Core)</Description>
    <Copyright>2020-2021</Copyright>
    <PackageProjectUrl>https://github.com/blakepell/AvalonMudClient</PackageProjectUrl>
    <PackageId>Avalon.Sqlite</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>2021.12.4.2</AssemblyVersion>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
	<LangVersion>10.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Editor\SqliteLight.xshd" />
    <EmbeddedResource Include="Editor\SqliteDark.xshd" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Argus.Core" Version="2022.2.9.1" />
    <PackageReference Include="AvalonEdit" Version="6.1.3.50" />
    <PackageReference Include="Dapper" Version="2.0.123" />
    <PackageReference Include="MahApps.Metro.IconPacks.MaterialDesign" Version="4.11.0" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="6.0.2" />
    <PackageReference Include="ModernWpfUI" Version="0.9.4" />
    <PackageReference Include="MahApps.Metro.IconPacks.VaadinIcons" Version="4.11.0" />
  </ItemGroup>

</Project>
