<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net5.0-windows10.0.18362</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <Version>2021.1.20.1</Version>
    <Authors>Blake Pell</Authors>
    <Company>Blake Pell</Company>
    <Description>SQLite Query Control and Extensions for WPF (.NET Core)</Description>
    <Copyright>2020-2021</Copyright>
    <PackageProjectUrl>https://github.com/blakepell/AvalonMudClient</PackageProjectUrl>
    <PackageId>Avalon.Sqlite</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>2021.1.20.1</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\SQLite.xshd" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\SQLite.xshd" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Argus.Core" Version="2020.11.21.1" />
    <PackageReference Include="AvalonEdit" Version="6.0.1" />
    <PackageReference Include="Dapper" Version="2.0.78" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="5.0.2" />
    <PackageReference Include="ModernWpfUI" Version="0.9.3" />
  </ItemGroup>

</Project>
